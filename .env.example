# SMPP Server
SMPP_PORT=2775
SMPP_TLS_PORT=2776
# SMPP_TLS_KEY_PATH=/certs/key.pem
# SMPP_TLS_CERT_PATH=/certs/cert.pem
SMPP_ENABLE_PLAINTEXT=true          # Set to "false" in production when TLS is configured
SMPP_MAX_CONNECTIONS=1000
SMPP_PRE_BIND_TIMEOUT_S=30
SMPP_MAX_SESSION_DURATION_S=86400   # 24 hours
ENQUIRE_LINK_TIMEOUT_S=90
SHUTDOWN_GRACE_PERIOD_S=5

# OTP Blue API
OTPBLUE_API_URL=https://api.otpblue.com/imsg/api/v1.1/otp/send/
OTPBLUE_API_TIMEOUT_MS=15000

# Client Config
CLIENT_CONFIG_PATH=config/clients.json

# Health/Metrics (bound to 127.0.0.1 by default â€” only accessible locally)
HEALTH_PORT=8080
HEALTH_BIND_ADDRESS=127.0.0.1

# Logging
LOG_LEVEL=info
